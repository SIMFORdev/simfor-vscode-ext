{
  "name": "simforide",
  "displayName": "simforide",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "project-explorer",
          "title": "SIMFOR",
          "icon": "media/simfor-main.svg"
        }
      ]
    },
    "views": {
      "project-explorer": [
        {
          "id": "project-files",
          "name": "SIMFOR Commands",
          "visibility": "hidden"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "project-files",
        "contents": "[Create new SIMFOR project](command:simforide.createProject)\n[Create new SIMFOR module](command:simforide.createModule)\n",
        "when": "true"
      }
    ],
    "commands": [
      {
        "command": "simforide.createProject",
        "title": "Create new SIMFOR project"
      },
      {
        "command": "simforide.createModule",
        "title": "Create new SIMFOR moudle"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  }
}
